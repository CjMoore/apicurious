<%= render partial: 'shared/nav' %>

<div class="container">
  <h1 id="username"><%= current_user.name %></h1>
  <h4 id="karma">Karma: <%= current_user.karma %></h3>

  <div class="collection">
    <% current_user.subreddits.each do |subreddit| %>
       <%= link_to subreddit.name, subreddit_path({sub: subreddit.name}) , class: "collection-item  blue-grey darken-3 white-text" %>
    <% end %>
  </ul>
</div>
