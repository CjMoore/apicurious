<%= render partial: 'shared/nav' %>

<div class="row">
  <div class="col s2">

  </div>

  <ul class="collection with-header col s8">
    <li class="collection=header"><h4><%= link_to @post.title, @post.url %></h4></li>
    <% @comments.each do |comment| %>
      <li class="collection-item comment-body"><%= comment.body %><span class="badge comment-author"><%= comment.author %></span></li>
      <% unless comment.children.nil? %>
        <ul class="collection replies">
          <% comment.children.each do |reply| %>
            <li class="collection-item green"><%= reply.body%></li>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  </ul>

</div>

<div class="container">
  <%= link_to "<<< Back to subreddit", subreddit_path({sub: @post.sub_name}) %>
</div>
